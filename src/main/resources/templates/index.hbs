{{#partial "content"}}

    <h1>Post list!</h1>

    {{#if posts}}
        {{#each posts }}
            <p>Current post:</p>
            <p>{{ content }}</p>
        {{/each}}
    {{else}}
        <p>No posts!</p>
    {{/if}}
    <p>Add a new Post:</p>

    <form action="/posts/new" method="POST">
        <label for="content">Post Content</label>
        <input id="content" name="content" type="text">

        <button type="submit" class="btn btn-default">Add new blog post</button>
    </form>
{{/partial}}

